/* pages/login/login.wxss */
page{ 
 height: 100%; 
} 
  
.container { 
 height: 100%; 
 display: flex; 
 flex-direction: column; 
 padding: 0; 
 box-sizing: border-box; 
} 
  
/*logo*/
.login-icon{ 
 flex: none; 
 height: 354rpx;
 display: flex;
 justify-items: center;
 align-items: center;
 margin: 0 auto;
} 
.login-img{ 
 width: 151rpx; 
 height: 70rpx;
 vertical-align: middle;
} 
  
/*表单内容*/
.login-from { 
  padding: 0 50rpx;
  width: 100%;
  box-sizing: border-box;
  flex: auto; 
  height:80%; 
} 

/*输入框*/ 
.inputView { 
 background-color: #fff; 
 line-height: 44rpx; 
 display: flex;
 align-items: center;
} 

.nameImage, .keyImage { 
 margin-left: 22rpx; 
 width: 30rpx; 
 height: 29rpx
} 
  
.inputText { 
  padding: 0 29rpx;
 flex: block; 
 width: 360rpx;
 text-align: left; 
 color: #cccccc; 
 font-size: 26rpx
} 

.code{
  font-size: 26rpx;
  color: #646464;
  width: 190rpx;
  text-align: right;
}
  
.line { 
 width: 100%; 
 height: 1rpx; 
 background-color: #eeeeee; 
 margin-top: 48rpx; 
 margin-bottom: 48rpx; 
} 
.lines{
  margin-bottom: 0;
}
/*按钮*/
.loginBtn { 
  width: 100%; 
 height: auto; 
 margin-bottom: 0rpx; 
 padding-bottom: 0rpx; 
 border-radius: 10rpx;
 margin-top: 60rpx; 
 background-color: #ca161f!important; 
}
.loginBtn.button-hover{
  background-color: rgba(202, 22, 31, .6)!important;
}
.protocol{
  font-size: 20rpx;
  color: #969696;
  position: fixed;
  bottom: 124rpx;
  left: 0;
  text-align: center;
  width: 750rpx;
}

.protocol text{
 color:#ca161f; 
}