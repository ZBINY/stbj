page{ 
 height: 100%; 
} 

.personal{
  height: 100%; 
 display: flex; 
 flex-direction: column; 
 padding: 0; 
 box-sizing: border-box; 
}

.personal .top{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 411rpx;
  background-color: #f5f6fa;
}

.personal .top .image{
  width: 180rpx;
  height: 180rpx;
  line-height: 160rpx;
  text-align: center;
  background-color: #c41419;
  border-radius: 100rpx;
  margin-bottom: 46rpx;
}

.personal .top .image image{
  width: 75rpx;
  height: 95rpx;
  vertical-align: middle;
}

.per_bottom{
  padding: 10rpx 50rpx;
  width: 100%;
  box-sizing: border-box;
  flex: auto; 
  height:80%; 
}

.item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 40rpx;
  padding-top: 40rpx;
}

.left image{
  vertical-align: middle;
  margin-right: 28rpx;
}

.left .order{
  width: 25rpx;
  height: 30rpx;
}

.left .qu{
  width: 38rpx;
  height: 20rpx;
}

.left .q{
  width: 31rpx;
  height: 30rpx;
}

.left .Headset{
  width: 34rpx;
  height: 30rpx;
}


.left text{
  font-size: 26rpx; 
  color:#323232;
}

.right_icon{
  width:12rpx;
  height: 18rpx;
  vertical-align: middle;
}

.fiexd_bottom{
  width: 750rpx;
  position: fixed;
  left:0;
  bottom: 0;
  text-align: center;
  height: 110rpx;
  line-height: 110rpx;
  border-top:1rpx solid #f5f6fa;
}

.fiexd_bottom{
  font-size: 28rpx;
  color:#969696;
}
