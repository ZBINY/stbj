@import "../common/common.wxss";

.navbar {
    display: flex;
    position: absolute;
    z-index: 500;
    top: 0;
    right: 0;
    width: 100%;
    height: 87rpx;
    line-height: 87rpx;
    border-bottom:1rpx solid #e6e6e6;
    justify-content: space-between;
}

.navbar__item {
    position: relative;
    display: block;
    flex: 1;
    /* padding: 10rpx 0; */
    text-align: center;
    font-size: 0;
    height: 87rpx;
    line-height: 87rpx;
    background-color: #fff;
    width: 200rpx;
}

.navbar__item_on {
    color: #c9151e;
    border-bottom:4rpx solid #c9151e;
}

.navbar__slider {
    position: absolute;
    display: block;
    content: " ";
    left: 0;
    bottom: 0;
    height: 3px;
    background-color: #c9151e;
    transition: transform .3s;
}

.navbar__title{
    display: inline-block;
    font-size: 15px;
    max-width: 8em;
    text-align: center;
    padding: 0 10rpx;
    /* background-color: #fff; */
}

