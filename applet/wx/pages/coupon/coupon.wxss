/* pages/coupon/coupon.wxss */
@import "../common/common.wxss";
.quickorder{
  display: flex;
  flex-direction: column;
}
.scroll-view  { 
  padding: 0 50rpx;
  width: 100%;
  box-sizing: border-box;
  flex: auto; 
  height:80%; 
} 
.navbar {
    display: flex;
    position: fixed;
    z-index: 500;
    top: 0;
    right: 0;
    width: 100%;
    height: 87rpx;
    line-height: 87rpx;
    padding: 0 47rpx;
    background-color: #fff;
    box-sizing: border-box;
    justify-content: space-between;
}

.navbar__item {
    position: relative;
    display: block;
    text-align: center;
    font-size: 0;
    height: 87rpx;
    line-height: 87rpx;
    width: 120rpx;
}

.navbar__item_on {
    color: #c9151e;
    border-bottom:4rpx solid #c9151e;
    
}

.navbar__slider {
    position: absolute;
    display: block;
    content: " ";
    left: 25rpx;
    bottom: 0;
    height: 2px;
    background-color: #c9151e;
    transition: transform .3s;
}

.navbar__title{
    display: inline-block;
    font-size: 15px;
    max-width: 8em;
    text-align: center;
}

swiper {
  height: 100%;
}

swiper-item{
  width: 100%;
  text-align: center;
}

.swiper_content{
  margin-top: 88rpx;
  width: 100%;
}

.panel{
  width: 93%;
}

.color{
  border:1rpx solid #dcdcdc;
  color:#323232;
}

.success{
  color:#c31419;
  border:1rpx solid #c31419;
}

.noneborder{
  border:none;
}


.danger{
  color:#c31419;
}

.error{
  color: #c41419;
}

.content{
  position: relative;
}

.coupon{
  padding: 22rpx;
}

.coupon image{
  width: 710rpx;
  height: 168rpx;
  vertical-align: top;
}

.ps{
   width: 710rpx;
  height: 168rpx;
  position: absolute;
  left:22rpx;
  top:22rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.left{
  width: 183rpx;
}

.right{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 523rpx;
  padding: 34rpx;
  box-sizing: border-box;
}

.font30{
  font-size: 30rpx;
  color: #323232;
  margin-bottom: 25rpx;
  text-align: left;
}

.font20{
  font-size: 30rpx;
  color: #969696;
}

.button{
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 26rpx;
  border-radius: 30rpx;
}

.range{
  border:1rpx solid #ff882d;
  color:#ff882d;
}

.pink{
