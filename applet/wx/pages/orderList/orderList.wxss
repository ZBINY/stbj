@import "../common/common.wxss";
.quickorder{
  display: flex;
  flex-direction: column;
}
.scroll-view  { 
  padding: 0 50rpx;
  width: 100%;
  box-sizing: border-box;
  flex: auto; 
  height:80%; 
} 
.navbar {
    display: flex;
    position: fixed;
    z-index: 500;
    top: 0;
    right: 0;
    width: 100%;
    height: 87rpx;
    line-height: 87rpx;
    padding: 0 47rpx;
    background-color: #fff;
    box-sizing: border-box;
    justify-content: space-between;
}

.navbar__item {
    position: relative;
    display: block;
    /* flex: 1; */
    text-align: center;
    font-size: 0;
    height: 87rpx;
    line-height: 87rpx;
    width: 120rpx;
}

.navbar__item_on {
    color: #c9151e;
    border-bottom:4rpx solid #c9151e;
    
}

.navbar__slider {
    position: absolute;
    display: block;
    content: " ";
    left: 25rpx;
    bottom: 0;
    height: 2px;
    background-color: #c9151e;
    transition: transform .3s;
}

.navbar__title{
    display: inline-block;
    font-size: 15px;
    max-width: 8em;
    text-align: center;
}

