.address{
  width: 700rpx;
  margin: 0 auto;
  border-radius: 10rpx;
  background-color: #fff;
  padding: 25rpx;
  display: flex;
  flex-direction: row;
  font-size: 28rpx;
  margin-top: 22rpx;
}

.address:last-child{
  margin-bottom: 35rpx;
}

.address image{
  width: 20rpx;
  height: 209rpx;
  vertical-align: middle;
  margin-right: 27rpx;
  margin-top: 10rpx;
}

.address_1{
  padding-top: 0;
  padding-bottom: 25rpx;
  border-bottom: 1px solid #e6e6e6;
}

.address_2{
  padding-top: 28rpx;
  padding-bottom: 28rpx;
  border-bottom: 1px solid #e6e6e6;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.address_3{
  float: left;
  margin-top: 20rpx;
  padding: 14rpx 18rpx;
  font-size: 26rpx;
  border-radius: 50rpx;
  margin-right: 18rpx;
}

.address_3:last-child{
  margin-right: 0;
}

.address_flex{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.address_1 .text{
  display: block;
  width: 100%;
  text-overflow:ellipsis;
  white-space:nowrap;
  overflow: hidden;
}

